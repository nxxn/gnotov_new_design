<%= link_to "Назад", admin_works_path, class: "admin_work_back" %>
<br><br>

<%= simple_form_for [:admin, @work] do |f| %>

  <%= f.input :title, label: "Название"  %>
  <%= f.input :url, label: "Ссылка"  %>
  <%= f.input :department, label: "О компании" %>
  <%= f.input :description, label: "Описание", as: :text  %>
  <% if @work.work_image.present? %>
    <%= image_tag @work.work_image.url(:medium), alt: "Main image" %>
  <% end %>
  <%= f.input :work_image, as: :file, label: "Главная картинка" %>
  <%= f.input :active, label: "Отображать в примерах?" %>
  <%= f.input :order_number, label: "Порядковый номер"  %>

  <%= f.input :lv, label: "На латышском" %>
  <%= f.input :ru, label: "На русском" %>
  <%= f.input :en, label: "На английском" %>

  <%= f.submit "Сохранить", class: "btn btn-default btn-success" %>

<% end %>
