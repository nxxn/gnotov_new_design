<section id="problems">
  <div class="container">
    <div class="col-sm-12 text-center">
      <h2><%= t('problems_heading') %></h2>
      <div class="btn-group">
        <div class="green_separator"></div>
      </div>
    </div>

    <div class="col-sm-12 text-center">

      <div class="col-sm-4 vcenter problems_block">
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <%= t('problem_1') %>
        </div>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <%= t('problem_2') %>
        </div>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <%= t('problem_3') %>
        </div>
      </div>

      <div class="col-sm-4 vcenter problems_block">
        <%= image_tag "man_problem.png", class: "img-responsive man_image" %>
      </div>

      <div class="col-sm-4 vcenter problems_block">
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <%= t('problem_4') %>
        </div>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <%= t('problem_5') %>
        </div>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <%= t('problem_6') %>
        </div>
      </div>

    </div>

    <div class="col-sm-12 text-center small_top_margin">
      <div class="col-sm-12">
        <p class="solution_not_found">
          <%= t('we_will_help') %>
        </p>
      </div>
    </div>

    <div class="col-sm-12 text-center">
      <div class="btn-group">
        <a class="btn btn-default btn-custom button_for_modal" href="#" data-toggle="modal" data-target="#worker_modal" data-trigger="<%= t('solve_problems') %>"><span><%= t('solve_problems') %></span></a>
      </div>
    </div>
  </div>
</section>

<section id="big_green_divider">
  <div class="container">
    <div class="col-sm-12 text-center">
      <div class="btn-group">
        <a class="btn btn-default btn-custom button_for_modal magical_button wow pulse" href="#" data-toggle="modal" data-target="#magical_modal" data-trigger="<%= t('magical_form') %>" data-wow-delay="2s"><%= t('magical_button') %></a>
      </div>
    </div>
  </div>
</section>

<section id="solution">
  <div class="container">
    <div class="col-sm-12 text-center">
      <h2><%= t('solution_heading') %></h2>
      <div class="btn-group">
        <div class="green_separator"></div>
      </div>
    </div>

    <div class="col-sm-12 text-center">

      <div class="col-sm-4 vcenter problems_block">
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <%= t('solution_1') %>
        </div>
        <% unless I18n.locale == :en %>
          <div class="col-sm-12 regular_text">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <%= t('solution_2') %>
          </div>
        <% end %>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <%= t('solution_3') %>
        </div>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <%= t('solution_7') %>
        </div>
      </div>

      <div class="col-sm-4 vcenter problems_block">
        <%= image_tag "man_solution.png", class: "img-responsive man_image" %>
      </div>

      <div class="col-sm-4 vcenter problems_block">
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <%= t('solution_4') %>
        </div>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <%= t('solution_5') %>
        </div>
        <div class="col-sm-12 regular_text">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <%= t('solution_6') %>
        </div>
        <% unless I18n.locale == :en %>
          <div class="col-sm-12 regular_text">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <%= t('solution_8') %>
          </div>
        <% end %>
      </div>

    </div>

    <div class="col-sm-12 text-center small_top_margin">
      <div class="col-sm-12">
        <p class="solution_not_found">
          <%= t('not_found_solution') %>
          <br>
          <%= t('leave_application_for_solution') %>
        </p>
      </div>
    </div>

    <div class="col-sm-12 text-center">
      <div class="btn-group">
        <a class="btn btn-default btn-custom button_for_modal" href="#" data-toggle="modal" data-target="#worker_modal" data-trigger="<%= t('leave_application') %>"><span><%= t('leave_application') %></span></a>
      </div>
    </div>

  </div>
</section>

<section id="portfolio">
  <div class="container">
    <div class="col-sm-12 text-center">
      <h2><%= t('works_heading') %></h2>
      <div class="btn-group">
        <div class="green_separator"></div>
      </div>
    </div>

    <div class="col-sm-12">
      <% @works.each_slice(2) do |slice| -%>
        <div class="row work_row">
          <% slice.each do |work| -%>
            <div class="col-sm-6 work_container">
              <div class="col-sm-12">

                <%= link_to work.work_image.url(:original), class: "folio-detail fancybox", rel: "lightbox" do %>

                  <div id="isotope_container" class="isotope text-center">
                    <div class="btn-group">
                      <div class="isotope-item gallery-item brand">
                        <div class="gallery-image portfolio-content">
                          <%= image_tag work.work_image(:medium), class: "img-responsive work_image", alt: "#{work.title}" %>
                          <div class="overlay text-center">
                            <i class="fa fa-search-plus folio-detail"></i>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                <% end %>

              </div>

              <div class="col-sm-12 regular_text work_title">
                <strong><%= work.title %></strong>
              </div>
              <div class="col-sm-12 regular_text work_department">
                <%= work.department %>
              </div>
              <!-- <div class="col-sm-12 regular_text work_description">
                <%= work.description %>
              </div> -->
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-12 text-center small_top_margin">
      <div class="btn-group">
        <%= link_to t('all_works'), portfolio_path, class: "btn btn-default btn-custom button_for_modal" %>
      </div>
    </div>
  </div>
</section>
