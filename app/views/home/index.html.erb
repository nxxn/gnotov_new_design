    <div class="col-sm-12">
      <div class="col-sm-4 vcenter top_image">
        <%= image_tag "man_hi.png", class: "img-responsive man_image" %>
      </div>
      <div class="col-sm-8 vcenter top_heading">
        <%= t('heading').html_safe %>
      </div>
    </div>
  </div>
</section>

